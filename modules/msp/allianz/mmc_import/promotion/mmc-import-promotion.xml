<?xml version="1.0" ?>
<cmd xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.censhare.com/xml/3.0.0/command.xsd">

  <xml-info title="${module-title}" description="${module-description}" localize="true" version="1">
    <property-resources>
      <base url="file:module" />
      <base url="file:../../../../client/javaadmin/module" />
      <base url="file:../../../../../common/global" />
    </property-resources>
  </xml-info>

  <cmd-info name="modules.msp.allianz.mmc_import.promotion.mmc_import_promotion" type="auto-execute" enabled="false" mode="loop"
            ignore-error="true">
    <error-log module="hotfolder" />
  </cmd-info>

  <admin-info is-template="true" dialog-id="config-xml-mmc-import-promotion-hotfolder" dialog-url="file:config-dialog.xml" />

  <listen-events>
    <timer delta-sec="30" />
  </listen-events>

  <commands currentstep="0">
    <command target="EventManager" method="waitevent" key="listen-events" />
    <command target="ImportManager" method="scan" key="scan" />
    <command target="ImportManager" method="file-group-rollback-transaction" key="import-manager" />
    <command target="ScriptletManager" scriptlet="modules.msp.allianz.mmc_import.promotion.MmcImportPromotion" method="action" />
  </commands>

  <scan group-result="true" group-export-key="file-export-group" add-data-node="true" scan-subdirectories="true" fork="true" scan-dir-filesystem="interfaces"
    scan-dir-relpath="file:MMC_TO_CENSHARE/promotion/in/" work-dir-filesystem="interfaces" work-dir-relpath="file:MMC_TO_CENSHARE/promotion/work/" out-filesystem-key="file@filesystem" out-relpath-key="file@url"
    max-files="200" max-queue-size="12" create-unique-url="false" last-modification-delay-sec="5" include-directory-regex-pattern=".*">
    <match include-file-regex-pattern=".*\.[Xx][Mm][Ll]" />
  </scan>

  <import-manager group-export-key="file-export-group" completed-dir-filesystem="interfaces" completed-dir-relpath="file:MMC_TO_CENSHARE/promotion/completed/"
    error-dir-filesystem="interfaces" error-dir-relpath="file:MMC_TO_CENSHARE/promotion/error/" transaction-group-name="hotfolder-rollback-transaction-group" />

  <config/>
</cmd>
